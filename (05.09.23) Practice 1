#include<stdio.h>
int main()
{
	int res1, res2;
	struct comp_numi{
		int realnum;
		int imagnum;
	} c[2];

	printf("Enter the first real number:\n");
	scanf("%d", &c[0].realnum);
        
        printf("Enter the first imaginary number:\n");
        scanf("%d", &c[0].imagnum);


	printf("Enter the second real number :\n");
        scanf("%d",&c[1].realnum);

        printf("Enter the second imaginary number:\n");
        scanf("%d", &c[1].imagnum);



	res1 =  c[1].realnum + c[0].realnum ;
        res2 =  c[1].imagnum + c[0].imagnum ;

	printf("The sum of the numbers give us %d+%di \n",res1, res2);
}

