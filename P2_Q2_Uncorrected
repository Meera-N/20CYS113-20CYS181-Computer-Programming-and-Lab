#include<stdio.h>
int main(){
int r;
int coef=1;

printf("Enter no. of rows:");
scanf("%d",&r);

for(int i=0;i<r;i++){
 for(int s=0; s<r-1;s++){
   printf("  ");}
 for(int j=0; j<=i;j++){
   if(i==0||j==0||j==i){
     printf("%d", coef);}
   else (coef= coef*(i+j-1)) 
     printf("%4d\t", coef);}
  printf("\n");}}   
     
