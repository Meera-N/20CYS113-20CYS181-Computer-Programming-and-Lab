#include<stdio.h>
int main() {
        //declaring 
	int num ;

	//getting input
	printf("Please enter the number you want to check if odd or even \n");

	scanf("%d", &num);


	//condition and result
	
        if (num % 2 != 0){

		printf("The number is odd \n");
        }
	else{

		printf("The number is even \n");
	}}

